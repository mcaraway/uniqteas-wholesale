<table class="index sortable" id='listing_taxonomies' data-hook data-sortable-link="<%= update_positions_admin_home_page_sliders_url %>">
  <colgroup>
    <col style="width: 85%">
    <col style="width: 15%">
  <thead>
    <tr data-hook="home_page_slider_header">
      <th><%= t(:name) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @home_page_sliders.each do |slider| %>
      <tr id="<%= spree_dom_id slider %>" data-hook="home_page_slider_row" class="<%= cycle('odd', 'even')%>">
        <td>
          <span class="handle"></span>
          <%= slider.name %>
        </td>
        <td class="actions">
          <%= link_to_edit slider.id, :no_text => true %>
          <%= link_to_delete slider, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>